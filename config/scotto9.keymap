#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // 4x2 layout, numbered 1–8:
            //
            // ┌───┬───┬───┬───┐
            // │ 1 │ 2 │ 3 │ 4 │  ← Top row
            // ├───┼───┼───┼───┤
            // │ 5 │ 6 │ 7 │ 8 │  ← Bottom row
            // └───┴───┴───┴───┘
            bindings = <
                &kp N1  &kp N2  &kp N3  &kp N4
                &kp N5  &kp N6  &kp N7  &kp N8
            >;
        };
    };
};
