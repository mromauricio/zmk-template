// scotto9.dtsi - Scotto9 shield for nice!nano v2
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <4>;
        rows = <2>;
        /* 4x2 matrix, keymap is:
         *
         * ┌───┬───┬───┬───┐
         * │ 1 │ 2 │ 3 │ 4 │  ← Row 0 (top)
         * ├───┼───┼───┼───┤
         * │ 5 │ 6 │ 7 │ 8 │  ← Row 1 (bottom)
         * └───┴───┴───┴───┘
         *
         * Matrix wiring:
         *   Columns (left→right): 029, 002, 115, 113
         *   Rows    (top→bottom): 020, 022
         */
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        
        diode-direction = "col2row";

        // Columns (left → right):
        // 029 (P0.29), 002 (P0.02), 115 (P1.15), 113 (P1.13)
        col-gpios
            = <&gpio0 29 GPIO_ACTIVE_HIGH>   // Pin labeled 029 - Column 0 (left)
            , <&gpio0 2  GPIO_ACTIVE_HIGH>   // Pin labeled 002 - Column 1
            , <&gpio1 15 GPIO_ACTIVE_HIGH>   // Pin labeled 115 - Column 2
            , <&gpio1 13 GPIO_ACTIVE_HIGH>   // Pin labeled 113 - Column 3 (right)
            ;

        // Rows (top → bottom):
        // 020 (P0.20), 022 (P0.22)
        row-gpios
            = <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // Pin labeled 020 - Top row
            , <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // Pin labeled 022 - Bottom row
            ;
    };
};
